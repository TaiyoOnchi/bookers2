<% if @user.errors.any? %> 
	<h3><%= @user.errors.count %> errors occurred</h3>
	<ul>
	    <% @user.errors.full_messages.each do |message| %> 
			<li><%= message %></li>　
		<% end %>
	</ul>
<% end %>

<h2>User info</h2>
<%= form_with model: @user, method: :patch do |f| %>
	<label for="Name">Name</label>
	<%= f.text_field :name, autofocus: true,id:"inputName", placeholder:"name"%>
	<label for="Image">Image</label>
	<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
	<label for="Name">Introduction</label>
	<%= f.text_field :introduction,  id:"inputIntroduction"%>
	<%= f.submit "Update User" %>
<% end %>